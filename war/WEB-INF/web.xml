<?xml version="1.0" encoding="utf-8"?>

<web-app xmlns="http://java.sun.com/xml/ns/javaee" version="2.5">
	<context-param>
		<param-name>slim3.rootPackage</param-name>
		<param-value>slim3Benkyo</param-value>
	</context-param>
	<context-param>
		<param-name>javax.servlet.jsp.jstl.fmt.localizationContext
		</param-name>
		<param-value>application</param-value>
	</context-param>
	<context-param>
		<param-name>javax.servlet.jsp.jstl.fmt.request.charset</param-name>
		<param-value>UTF-8</param-value>
	</context-param>

	<filter>
		<filter-name>HotReloadingFilter</filter-name>
		<filter-class>org.slim3.controller.HotReloadingFilter</filter-class>
	</filter>
	<filter>
		<filter-name>DatastoreFilter</filter-name>
		<filter-class>org.slim3.datastore.DatastoreFilter</filter-class>
	</filter>
	<filter>
		<filter-name>FrontController</filter-name>
		<filter-class>org.slim3.controller.FrontController</filter-class>
	</filter>
	<filter>
		<filter-name>logincheck</filter-name>
		<filter-class>com.appspot.atndalert.servlet.LoginCheckFilter
		</filter-class>
	</filter>

	<filter-mapping>
		<filter-name>HotReloadingFilter</filter-name>
		<url-pattern>/*</url-pattern>
		<dispatcher>REQUEST</dispatcher>
	</filter-mapping>
	<filter-mapping>
		<filter-name>DatastoreFilter</filter-name>
		<url-pattern>/*</url-pattern>
		<dispatcher>REQUEST</dispatcher>
	</filter-mapping>
	<filter-mapping>
		<filter-name>FrontController</filter-name>
		<url-pattern>/*</url-pattern>
		<dispatcher>REQUEST</dispatcher>
		<dispatcher>FORWARD</dispatcher>
		<dispatcher>INCLUDE</dispatcher>
		<dispatcher>ERROR</dispatcher>
	</filter-mapping>
	<filter-mapping>
		<filter-name>logincheck</filter-name>
		<url-pattern>/regist.jsp</url-pattern>
	</filter-mapping>

	<servlet>
		<servlet-name>GlobalTransactionServlet</servlet-name>
		<servlet-class>org.slim3.datastore.GlobalTransactionServlet
		</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<servlet>
		<servlet-name>SendMailQueue</servlet-name>
		<servlet-class>com.appspot.atndalert.servlet.SendMailQueue
		</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>SendMail</servlet-name>
		<servlet-class>com.appspot.atndalert.servlet.RssParseServlet
		</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>DeleteAllData</servlet-name>
		<servlet-class>com.appspot.atndalert.servlet.DeleteAllDataServlet
		</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>RegistAlertWord</servlet-name>
		<servlet-class>com.appspot.atndalert.servlet.RegistAlertWordServlet
		</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>ReferenceAlertWord</servlet-name>
		<servlet-class>com.appspot.atndalert.servlet.ReferenceAlertWordServlet
		</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>SearchEvent</servlet-name>
		<servlet-class>com.appspot.atndalert.servlet.SearchAtndEventServlet
		</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>DeleteData</servlet-name>
		<servlet-class>com.appspot.atndalert.servlet.DeleteDataServlet
		</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>logout</servlet-name>
		<servlet-class>com.appspot.atndalert.servlet.LogoutServlet</servlet-class>
	</servlet>


	<servlet-mapping>
		<servlet-name>GlobalTransactionServlet</servlet-name>
		<url-pattern>/slim3/gtx</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>SendMailQueue</servlet-name>
		<url-pattern>/sendmailqueue</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>SendMail</servlet-name>
		<url-pattern>/sendmail</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>DeleteAllData</servlet-name>
		<url-pattern>/deleteAll</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>RegistAlertWord</servlet-name>
		<url-pattern>/regist</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ReferenceAlertWord</servlet-name>
		<url-pattern>/refer</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>SearchEvent</servlet-name>
		<url-pattern>/searchEvent</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>DeleteData</servlet-name>
		<url-pattern>/delete</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>logout</servlet-name>
		<url-pattern>/logout</url-pattern>
	</servlet-mapping>

	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>


	<security-constraint>
		<web-resource-collection>
			<url-pattern>/slim3/gtx</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<role-name>admin</role-name>
		</auth-constraint>
	</security-constraint>
	<security-constraint>
		<web-resource-collection>
			<url-pattern>/ktrwjr/*</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<role-name>admin</role-name>
		</auth-constraint>
	</security-constraint>

</web-app>